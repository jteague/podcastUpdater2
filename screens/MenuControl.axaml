<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PodcastUpdater2.screens.MenuControl"
             xmlns:vm="clr-namespace:PodcastUpdater2.ViewModels"
             x:DataType="vm:MenuControlViewModel"
             Background="Gray">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem Header="Open local rss.xml..." />
            <MenuItem Header="Open remote rss.xml..." />
            <MenuItem Header="Settings..." Command="{Binding OpenSettingsCommand}"/>
            <MenuItem Header="Save" />
            <MenuItem Header="Exit" />
        </MenuItem>
        <MenuItem Header="_Actions">
            <MenuItem Header="Edit podcast info..." />
            <MenuItem Header="Add new episode..." />
            <MenuItem Header="Upload audio file..." />
            <MenuItem Header="Publish rss.xml" />
        </MenuItem>
    </Menu>
</UserControl>